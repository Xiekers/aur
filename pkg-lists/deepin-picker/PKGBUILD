# Maintainer Sky <sky at gfw dot party>

pkgname=deepin-picker
pkgver=git
pkgrel=1
pkgdesc="Color picker tool for deepin."
arch=('any')
url="https://github.com/manateelazycat/deepin-picker"
license=('Unknow')
provides=('manateelazycat')
depends=('qt5-base')
makedepends=('make' 'git' 'qt5-base')
conflicts=()
source=("https://github.com/manateelazycat/deepin-picker/archive/master.zip")
sha512sums=('SKIP')

build() {
    mkdir -p $srcdir/$pkgname-master/build
    cd $srcdir/$pkgname-master/build
    qmake ..
    make
}


package(){
    cd $srcdir/$pkgname-master/build
    make install DESTDIR="$pkgdir"
    install -Dm0755 deepin-picker "$pkgdir"/usr/bin/deepin-picker
    chmod +x "$pkgdir"/usr/bin/deepin-picker
}